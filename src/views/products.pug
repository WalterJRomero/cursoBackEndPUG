html 
    head 
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")      
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        title="server pug"
    body 
        h1(class="display-2 text-center")= "Productos registrados"
        div(class="container")
            div(class="row")
                div(class="col text-center")
                    button(class="btn btn-success mt-5" onclick="location.href='/'" value="carga de productos")= "Volver a la carga de productos"
        if products
            div(class="container justify-content-center align-item-center")
                div(class="row justify-content-center")
                    each product in products
                        div(class="card m-5 m-3 shadow p-3 bg-white rounded" style="width: 18rem;")
                            img(class="card-img-top mt-2" src=product.thumbnail alt="Card image cap")
                            div(class="card-body")
                                h5(class="card-title text-center")=product.title
                                p(class="card-text") Precio: $ #{product.price}
                                p(class="card-text") Product id: #{product.id}
        else           
            h2(class="text-center text-danger mt-5")="No hay productos cargados"
 














        
